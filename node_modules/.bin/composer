#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/php" ]; then
  "$basedir/php"  "$basedir/../getcomposer/composer.phar" "$@"
  ret=$?
else 
  php  "$basedir/../getcomposer/composer.phar" "$@"
  ret=$?
fi
exit $ret
